@model Movie

<h1>Add a Movie</h1>
<form asp-action="Movies" method="post">
    <label asp-for="Title"></label>
    <input type="text" asp-for="Title" value="@Model.Title" />
    <br />

    <label asp-for="Genre"></label>
    <input type="text" asp-for="Genre" value="@Model.Genre" />
    <br />

    <label asp-for="Runtime"></label>
    <input type="number" asp-for="Runtime" value="@Model.Runtime" />
    <br />

    <input type="submit" asp-action="Result" value="Add this Movie" />
</form>